@if (_isComponentLoaded)
{
    <div class="row">
        <div class="col s3">
            <h3>Words</h3>
        </div>
        <div class="col s3" style="padding-top: 2em;">
            <input placeholder="Key search" id="word_search_text" type="text" class="validate" @bind="_inputWordSearch" autocomplete="off" spellcheck="false">
        </div>
        <div class="col s3" style="padding-top: 2em;">
            <select id="word_search_category" @bind="_inputWordSearchCategory">
                <option value="0" selected>All categories</option>
                @foreach (var category in _categories)
                {
                    <option class="table-line" value="@category.Category.Id">@category.Category.Title</option>
                }
            </select>
        </div>
        <div class="col s1"></div>
        <div class="col s2" style="padding-top: 3em;">
            <label>
                <input type="checkbox" @bind="_inputWordSearchIsPinned" />
                <span>Only pinned</span>
            </label>
        </div>
    </div>
    <div style="height: 20px;"></div>
    <table class="striped">
        <thead>
            <tr>
                <th class="col" style="width: 25%;">Key</th>
                <th class="col" style="width: 30%;">Value</th>
                <th class="col" style="width: 25%;">Categories</th>
                <th class="col" style="width: 10%;">Pinned</th>
                <th class="col" style="width: 10%;"></th>
            </tr>
        </thead>
        <tbody style="height: 35vh;">
            @foreach (var word in _words)
            {
                @if (IsWordMatchingFilter(word))
                {
                    <tr>
                        <td class="col table-line" style="width: 25%;">@word.Word.KeyWord</td>
                        <td class="col table-line" style="width: 30%;">@word.Word.ValueWord</td>
                        <td class="col table-line" style="width: 25%;">@GetWordCategoriesToString(word)</td>
                        <td class="col" style="width: 10%;">
                            <label>
                                @if (word.Word.IsPinned)
                                {
                                    <input type="checkbox" checked="checked" />
                                }
                                else
                                {
                                    <input type="checkbox" />
                                }
                                <span style="color: #00000000;" @onclick="() => OnPinClick(word.Word)">_</span>
                            </label>
                        </td>
                        <td class="col" style="width: 10%;">
                            <button class="waves-effect waves-light btn-flat" @onclick="() => _wordEditModal.Open(word)">Edit</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div style="height: 30px;"></div>
    <div class="row">
        <EditForm Model="_wordEdit" OnValidSubmit="OnWordAdd">
            <DataAnnotationsValidator></DataAnnotationsValidator>
            <h5>Add a new word</h5>
            <div class="row">
                <div class="col s4">
                    <div class="input-field">
                        <input placeholder="Key" id="word_key" type="text" class="validate" @bind="_wordEdit.KeyWord" autocomplete="off" spellcheck="false">
                    </div>
                </div>
                <div class="col s4">
                    <div class="input-field">
                        <input placeholder="Value" id="word_value" type="text" class="validate" @bind="_wordEdit.ValueWord" autocomplete="off" spellcheck="false">
                    </div>
                </div>
                <div class="col s4">
                    <div class="input-field">
                        <select id="word_initial_category" @bind="_wordEditInitialCategory">
                            @foreach (var category in _categories)
                            {
                                if (category.Category.IsDefault)
                                {
                                    <option class="table-line" value="@category.Category.Id" disabled selected>@category.Category.Title</option>
                                }
                                else
                                {
                                    <option class="table-line" value="@category.Category.Id">@category.Category.Title</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-large waves-effect waves-light">Create</button>
            <a class="btn btn-large waves-effect waves-light" style="float: right; background-color: #ee6e73;" @onclick="() => _wordAddBulkModal.Open()">Add multiple words</a>
        </EditForm>
    </div>
    <WordEditModal @ref="_wordEditModal" Categories="_categories" OnWordEditSave="OnWordEdit" OnWordEditDelete="OnWordDelete"></WordEditModal>
    <WordAddBulkModal @ref="_wordAddBulkModal" Categories="_categories" OnModalSaveClick="OnWordBulkAdd"></WordAddBulkModal>
}